{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "allowUnreachableCode": true,
    "allowJs": false,
    "sourceMap": true,
